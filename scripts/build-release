# Script to build release binaries for multiple platforms
# Usage: ./scripts/build-release [os] [arch]
# Example: ./scripts/build-release linux amd64

set -euo pipefail

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

# Function to print error messages
error() {
  echo "ERROR: $*" >&2
  exit 1
}

# Verify gox is available
if [[ ! -f "${DIR}/../bin/gox" ]]; then
  error "gox not found. Run 'make bin/gox' to build it."
fi

XC_OS=${1:-linux darwin windows}
XC_ARCH=${2:-386 amd64 arm}
XC_EXCLUDE_OSARCH="!darwin/arm !darwin/386"

export CGO_ENABLED=0

export GOFLAGS="-mod=readonly"

export GOPATH=${GOPATH:-$(go env GOPATH)}

echo "Downloading Go module dependencies..."
go mod download

echo "Building release binaries for OS: ${XC_OS}, ARCH: ${XC_ARCH}..."

"${DIR}/../bin/gox" \
-os="${XC_OS}" \
-arch="${XC_ARCH}" \
-osarch="${XC_EXCLUDE_OSARCH}" \
-ldflags "-s -w" \
-output "bin/{{.Dir}}_{{.OS}}_{{.Arch}}" \
github.com/deptofdefense/now/cmd/now

echo "Build complete! Binaries are in the bin/ directory."
